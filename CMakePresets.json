    },
    {
      "name": "clang-cl",
      "hidden": true,
      "inherits": "windows"
    },
    {
      "name": "msvc-x64",
      "inherits": "msvc",
      "configurePreset": "msvc-x64",
      "displayName": "Visual C++ x64"
    },
    {
      "name": "msvc-x86",
      "inherits": "msvc",
      "configurePreset": "msvc-x86",
      "displayName": "Visual C++ x86"
    },
    {
      "name": "clang-cl-x64",
      "inherits": "clang-cl",
      "configurePreset": "clang-cl-x64",
      "displayName": "Clang CL x64"
    },
    {
      "name": "clang-cl-x86",
      "inherits": "clang-cl",
      "configurePreset": "clang-cl-x86",
      "displayName": "Clang CL x86"
    },
    {
      "name": "gcc-ucrt",
      "inherits": "windows",
      "configurePreset": "gcc-ucrt",
      "displayName": "GCC UCRT64"
    },
    {
      "name": "linux",
      "hidden": true,
      "inherits": "default",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "gcc",
      "inherits": "linux",
      "configurePreset": "gcc",
