      "configuration": "Release"
    },
    {
      "name": "clang-cl-x86-debug",
      "inherits": "clang-cl-x86",
      "displayName": "Clang CL x86 Debug",
      "configuration": "Debug"
    },
    {
      "name": "clang-cl-x86-release",
      "inherits": "clang-cl-x86",
      "displayName": "Clang CL x86 Release",
      "configuration": "Release"
    },
    {
      "name": "gcc-ucrt-debug",
      "inherits": "gcc-ucrt",
      "displayName": "GCC UCRT64 Debug",
      "configuration": "Debug"
    },
    {
      "name": "gcc-ucrt-release",
      "inherits": "gcc-ucrt",
      "displayName": "GCC UCRT64 Release",
      "configuration": "Release"
    },
    {
      "name": "linux",
      "hidden": true,
      "inherits": "default",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "gcc",
      "hidden": true,
      "inherits": "linux",
      "configurePreset": "gcc"
    },
    {
      "name": "clang",
      "hidden": true,
