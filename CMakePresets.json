{
  "version": 3,
  "configurePresets": [
    {
      "name": "default",
      "hidden": true,
      "generator": "Ninja Multi-Config",
      "binaryDir": "$env{USERBUILD}/${sourceDirName}-${presetName}",
      "installDir": "$env{USERINSTALL}/${sourceDirName}",
      "cacheVariables": {
        "CMAKE_MESSAGE_LOG_LEVEL": "VERBOSE",
        "PNTR_SINGLE_HEADER": "ON",
        "PNTR_TUTORIAL": "ON",
        "PNTR_TESTING": "ON"
      }
    },
    {
      "name": "windows",
      "hidden": true,
      "inherits": "default",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "msvc",
      "hidden": true,
      "inherits": "windows",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "cl.exe"
      }
    },
    {
      "name": "clang-cl",
      "hidden": true,
      "inherits": "windows",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang-cl.exe"
      }
    },
    {
      "name": "msvc-x64",
      "inherits": "msvc",
      "displayName": "Visual C++ x64",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "toolset": {
        "value": "host=x64",
        "strategy": "external"
      }
    },
    {
      "name": "msvc-x86",
      "inherits": "msvc",
      "displayName": "Visual C++ x86",
      "architecture": {
        "value": "x86",
        "strategy": "external"
      },
      "toolset": {
        "value": "host=x86",
        "strategy": "external"
      },
      "cacheVariables": {
        "FETCHCONTENT_TRY_FIND_PACKAGE_MODE": "NEVER"
      }
    },
    {
      "name": "clang-cl-x64",
      "inherits": "clang-cl",
      "displayName": "Clang CL x64",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "toolset": {
        "value": "host=x64",
        "strategy": "external"
      }
    },
    {
      "name": "clang-cl-x86",
      "inherits": "clang-cl",
      "displayName": "Clang CL x86",
      "architecture": {
        "value": "x86",
        "strategy": "external"
      },
      "toolset": {
        "value": "host=x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_CXX_FLAGS": "-m32",
        "FETCHCONTENT_TRY_FIND_PACKAGE_MODE": "NEVER"
      }
    },
    {
      "name": "gcc-ucrt",
      "inherits": "windows",
      "displayName": "GCC UCRT64",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "g++.exe",
        "FETCHCONTENT_TRY_FIND_PACKAGE_MODE": "NEVER"
      },
      "environment": {
        "PATH": "$env{MSYS2_ROOT}/usr/bin;$env{MSYS2_ROOT}/ucrt64/bin;$penv{PATH}"
      }
    },
    {
      "name": "linux",
      "hidden": true,
      "inherits": "default",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "gcc",
      "inherits": "linux",
      "displayName": "GCC",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "g++"
      }
    },
    {
      "name": "clang",
      "inherits": "linux",
      "displayName": "Clang",
      "cacheVariables": {
        "CMAKE_CXX_COMPILER": "clang++"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "hidden": true,
      "verbose": true
    },
    {
      "name": "windows",
      "hidden": true,
      "inherits": "default",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "msvc",
      "hidden": true,
      "inherits": "windows"
    },
    {
      "name": "clang-cl",
      "hidden": true,
      "inherits": "windows"
    },
    {
      "name": "gcc-ucrt",
      "hidden": true,
      "inherits": "windows",
      "configurePreset": "gcc-ucrt"
    },
    {
      "name": "msvc-x64",
      "hidden": true,
