    },
    {
      "name": "clang-debug",
      "inherits": "clang",
      "displayName": "Clang Debug",
      "configuration": "Debug"
    },
    {
      "name": "clang-release",
      "inherits": "clang",
      "displayName": "Clang Release",
      "configuration": "Release"
    }
  ],
  "testPresets": [
    {
      "name": "default",
      "hidden": true,
      "output": {
        "outputOnFailure": true
      },
      "execution": {
        "stopOnFailure": true,
        "noTestsAction": "error"
      }
    },
    {
      "name": "windows",
      "hidden": true,
      "inherits": "default",
      "condition": {
